@model RibRoast

<div class="form-group">
    <label asp-for="BoneInOrBoneless" class="form-control">Bone-In or BoneLess: </label>
    <select asp-for="BoneInOrBoneless" class="form-control">
        <option value="BoneIn">Bone-in</option>
        <option value="Boneless">Boneless</option>
    </select>
</div>
<div class="form-group">
    <label asp-for="MeatGrade" class="form-control">Grade: </label>
    <select asp-for="MeatGrade" class="form-control">
        <option value="Select">Select</option>
        <option value="Choice">Choice</option>
        <option value="Prime">Prime</option>

    </select>
</div>
<div class="form-group">
    <label asp-for="CutAndTied" class="form-control">Cut and Tied: </label>
    <select asp-for="CutAndTied" class="form-control">
        <option value="true">Yes</option>
        <option value="false">No</option>
    </select>
</div>
