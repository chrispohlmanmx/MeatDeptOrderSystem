@model OrderItem
@{
    string title = "Edit Item";
    ViewBag.Title = title;
}

<h2>@title</h2>

<form asp-action="Edit" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="FirstName">Customer First Name</label>
        <input type="text" asp-for="FirstName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="LastName">Customer Last Name</label>
        <input type="text" asp-for="LastName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Phone">Customer Phone Number</label>
        <input type="tel" asp-for="Phone" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="ItemName">Item Name</label>
        <input type="text" asp-for="ItemName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ItemBrand">Brand Name</label>
        <input type="text" asp-for="ItemBrand" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Quantity">Quantity</label>
        <input type="number" asp-for="Quantity" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Weight">Weight</label>
        <input type="number" asp-for="Weight" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="pickupDate">Pickup Date</label>
        @Html.EditorFor(model => model.pickupDate, new { htmlAttributes = new { @class = "form-control" } })
        <span class="input-group-addon">
            <span class="glyphicon glyphicon-calendar"></span>
        </span>
        
    </div>
    <div class="form-group" style="position: relative">
        <label asp-for="CuttingInstructions">Cutting Instructions</label>
        <textarea asp-for="CuttingInstructions" class="form-control" rows="5"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="PackagingInstructions">Packaging Instructions</label>
        <textarea asp-for="PackagingInstructions" class="form-control" rows="5"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="OtherComments">Other Comments</label>
        <textarea asp-for="OtherComments" class="form-control" rows="5"></textarea>
    </div>
    <input type="hidden" asp-for="OrderItemId" />
    <input type="hidden" asp-for="orderedOnDate" value="@DateTime.Now" />
    

    <button type="submit" class="btn btn-primary">@ViewBag.Action</button>
    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Cancel</a>

</form>
